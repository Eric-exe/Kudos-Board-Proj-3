generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id                  Int @id @default(autoincrement())
    username            String @unique
    password            String

    boardsCreated       Board[] @relation("BoardsCreated")
    cardsCreated        Card[]
    commentsCreated     Comment[]

    boardsLiked         Board[] @relation("BoardsLiked")
    boardsDisliked      Board[] @relation("BoardsDisliked")

}

model Board {
    id                  Int  @id @default(autoincrement())
    author              User @relation("BoardsCreated", fields: [authorId], references: [id])
    authorId            Int
    title               String
    imgUrl              String
    category            String
    upvotes             Int
    usersLiked          User[] @relation("BoardsLiked")
    usersDisliked       User[] @relation("BoardsDisliked")

    cards               Card[]
}

model Card {
    id                  Int @id @default(autoincrement())
    author              User @relation(fields: [authorId], references: [id])
    authorId            Int
    board               Board @relation(fields: [boardId], references: [id])
    boardId             Int
    signed              Boolean
    title               String
    description         String
    gifUrl              String
    comments            Comment[]
}

model Comment {
    id                  Int @id @default(autoincrement())
    author              User @relation(fields: [authorId], references: [id])
    authorId            Int
    card                Card @relation(fields: [cardId], references: [id])
    cardId              Int
    content             String
}