generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id                  Int @id @default(autoincrement())
    username            String @unique
    password            String
    boardsCreated       Board[]
    cardsCreated        Card[] @relation("cardsCreated")
    cardsLiked          Card[] @relation("cardsLiked")
    cardsDisliked       Card[] @relation("cardsDisliked")
    commentsCreated     Comment[]
}

model Board {
    id                  Int  @id @default(autoincrement())
    author              User @relation(fields: [authorId], references: [id])
    authorId            Int
    title               String
    imgUrl              String
    category            String
    cards               Card[]
}

model Card {
    id                  Int @id @default(autoincrement())
    author              User @relation("cardsCreated", fields: [authorId], references: [id])
    authorId            Int
    board               Board @relation(fields: [boardId], references: [id])
    boardId             Int
    signed              Boolean
    title               String
    description         String
    gifUrl              String
    comments            Comment[]
    likes               Int
    usersLiked          User[] @relation("cardsLiked")
    usersDisliked       User[] @relation("cardsDisliked")
}

model Comment {
    id                  Int @id @default(autoincrement())
    author              User @relation(fields: [authorId], references: [id])
    authorId            Int
    card                Card @relation(fields: [cardId], references: [id])
    cardId              Int
    content             String
}